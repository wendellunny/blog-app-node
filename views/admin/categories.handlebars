<h2>Lista de Categorias</h2>
<hr>

<a href="/admin/category/add"> <button class="btn btn-success">Nova Categoria</button> </a>

{{#each categories}}
    <div class="card">
        <div class="card-body">
            <h4>{{name}}</h4>
            <small>Slug: {{slug}}</small>
            <br>
            <small>Data de criação: {{date}}</small>
            <br>
            <a href="/admin/category/edit/{{_id}}"><button class="btn btn-success">Editar Categoria</button> </a>
            <form action="/admin/category/delete" method="POST">
                <input type="hidden" name="id" value="{{_id}}" >
                <button type="submit" class="btn btn-danger mt-2">Deletar Categoria</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma categoria registrada</h4>
{{/each}}